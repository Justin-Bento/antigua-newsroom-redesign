<section class="lg:p-16 py-16 p-4 min-h-screen">
  <header>
    <h1 class="font-bold text-4xl">Local News</h1>
    <p>Find me in app/views/articles/index.html.erb</p>
  </header>
  <div class="pt-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 -order-1">
    <% @articles.each do |article| %>
      <a href="/articles/<%= article.id %>">
        <div class="overflow-hidden rounded-lg border hover:bg-blue-50/40 active:border-gray-400">
          <div class="flex flex-col">
            <div class="w-full aspect-square h-64 bg-gray-100 border">&nbsp;</div>
            <div class="px-4 py-5 sm:p-6 max-w-[64ch]">
              <span class="inline-flex items-center rounded-md border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2">Announcement</span>
              <h2 class="text-xl font-medium line-clamp-2 text-gray-950 my-3"><%= article.title %></h2>
              <p class="text-gray-950/50 line-clamp-2"><%= article.body %></p>
              <hr class="my-3" />
              <p class="text-gray-950/50 text-xs">Date Posted: <%= article.created_at.strftime("%Y-%m-%d") %></p>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  </ul>
</section>
